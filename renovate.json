{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:monorepos"
  ],
  "packageRules": [
    {
      "matchDatasources": ["hex"],
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true,
      "addLabels": ["skip-changelog"]
    }
  ]
}
